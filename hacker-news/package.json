    "pagehop": "^1.0.2"
  },
  "private": true,
  "keywords": [],

  "pagehop": {
    "id": "HackerNews",
    "options": [
      {
        "keyword": ":n",
        "description": "Gets the list with the newest posts."
      },
      {
        "keyword": ":c",
        "description": "Gets the list with the newest comments."
      },
      {
        "keyword": ":ask",
        "description": "Gets the list with the newest Ask HN: questions."
      },
      {
        "keyword": ":s",
        "description": "Gets the list with the newest Show HN: posts."
      },
      {
        "keyword": ":j",
        "description": "Gets the list with the job offers."
      },
      {
        "keyword": ":d",
        "description": "(WHERE APPLICABLE!) Whichever list is loaded, all items will point to the discussions."
      }
    ],
    "hasQuery": false
  }
}